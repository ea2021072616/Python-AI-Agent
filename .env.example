# ========================================
# CONFIGURACIÓN DEL MICROSERVICIO DE IA
# ========================================

# --- Aplicación ---
APP_NAME=Arludent AI Microservice
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8001

# --- OpenAI / LLM ---
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000

# --- Backend Laravel (comunicación interna) ---
BACKEND_URL=http://127.0.0.1:8000
BACKEND_INTERNAL_API_KEY=your-secret-internal-api-key-here
BACKEND_TIMEOUT=30

# --- Redis (opcional - para caché y sesiones) ---
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# --- Base de Datos (opcional - para historial de conversaciones) ---
DATABASE_ENABLED=false
DATABASE_URL=sqlite:///./arludent_ai.db
# Para PostgreSQL: postgresql://user:password@localhost:5432/arludent_ai
# Para MySQL: mysql+pymysql://user:password@localhost:3306/arludent_ai

# --- CORS ---
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true

# --- Rate Limiting ---
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=50
RATE_LIMIT_PERIOD=60

# --- Logging ---
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# --- Seguridad ---
SECRET_KEY=your-secret-key-for-session-signing
API_KEY_HEADER=X-API-Key

# --- Configuración del Agente ---
AGENT_MAX_ITERATIONS=10
AGENT_TIMEOUT=60
CONVERSATION_HISTORY_LIMIT=20
